extends layout

block content
  .main.container
        h1 Sign up
        div.alert
        form(method='POST' action='')
          div.form-group
            label(for='username') Username
            input(type='text' id='register_username' name='username')
          div.form-group
            label(for='password') Password
            input(type='password' id='register_password' name='password')
          button(type='submit' id="register_button") Sign up
        p Already logged in before? Log in 
          a(href='login') here!